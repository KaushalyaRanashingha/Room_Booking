<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/admin.css">
</head>

<body class="bg-light">
    <div class="d-flex min-vh-100">
        
        <%- include("sidebar") %>

        <div class="flex-grow-1 d-flex flex-column">
            
            <%- include("navbar") %>

            <main class="container-fluid py-4">

                <div class="d-flex justify-content-between align-items-end mb-4">
                    <div>
                        <h1 class="h3 mb-1">Dashboard</h1>
                        <p class="text-muted mb-0">Overview of users, rooms, bookings, and payments.</p>
                    </div>
                </div>

                <section class="row g-3 mb-4">
                    <div class="col-md-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted text-uppercase small fw-bold">Total Users</h6>
                                <h4 class="mb-0"><%= users %></h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted text-uppercase small fw-bold">Total Rooms</h6>
                                <h4 class="mb-0"><%= rooms %></h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted text-uppercase small fw-bold">Approved Bookings</h6>
                                <h4 class="mb-0"><%= bookings %></h4>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="card shadow-sm h-100">
                            <div class="card-body">
                                <h6 class="text-muted text-uppercase small fw-bold">Total Payments</h6>
                                <h4 class="mb-0"><%= payments %></h4>
                            </div>
                        </div>
                    </div>
                </section>

                <div class="card shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0">Recent Bookings</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-light">
                                    <tr>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th>Mobile</th>
                                        <th>Room</th>
                                        <th>Price</th>
                                        <th>Check-in</th>
                                        <th>Check-out</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (recentBookings.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center py-4">No bookings yet</td>
                                        </tr>
                                    <% } %>

                                    <% recentBookings.forEach(b => { %>
                                        <tr>
                                            <td class="fw-medium"><%= b.name %></td>
                                            <td><%= b.email %></td>
                                            <td><%= b.mobile %></td>
                                            <td>
                                                <div class="small fw-bold text-primary">Room <%= b.room?.roomNumber %></div>
                                                <div class="small text-muted"><%= b.room?.type %></div>
                                            </td>
                                            <td>LKR <%= b.room?.price %></td>
                                            <td class="small"><%= b.checkin.toDateString() %></td>
                                            <td class="small"><%= b.checkout.toDateString() %></td>
                                            <td>
                                                <span class="badge rounded-pill bg-<%= b.status === 'Approved' ? 'success' : 'warning' %>">
                                                    <%= b.status %>
                                                </span>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>