<!DOCTYPE html>
<html>
<head>
  <title>Admin Login</title>
  <style>
    :root {
      --bg: #f5f7fb;
      --surface: #ffffff;
      --surface-soft: #f9fafb;
      --primary: #2563eb;
      --primary-soft: rgba(37, 99, 235, 0.12);
      --primary-dark: #1d4ed8;
      --text: #111827;
      --muted: #6b7280;
      --border: #e5e7eb;
      --danger: #dc2626;
      --radius: 10px;
      --shadow: 0 18px 45px rgba(15, 23, 42, 0.12);
      --transition: 160ms ease-out;
    }

    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
    }

    body {
      min-height: 100vh;
      background: radial-gradient(circle at top, #e0edff 0, transparent 55%), var(--bg);
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--text);
      padding: 16px;
    }

    .wrapper {
      width: 100%;
      max-width: 420px;
    }

    .card {
      background: var(--surface);
      border-radius: 16px;
      padding: 24px 24px 20px;
      box-shadow: var(--shadow);
      border: 1px solid #e2e8f0;
    }

    .card-header {
      margin-bottom: 20px;
    }

    h2 {
      font-size: 22px;
      font-weight: 600;
      margin-bottom: 4px;
    }

    .subtitle {
      font-size: 13px;
      color: var(--muted);
    }

    form {
      margin-top: 8px;
    }

    .field-group {
      margin-bottom: 14px;
    }

    .field-label {
      display: block;
      font-size: 13px;
      color: var(--text);
      margin-bottom: 4px;
    }

    .input-shell {
      position: relative;
      border-radius: 8px;
      background: var(--surface-soft);
      border: 1px solid var(--border);
      display: flex;
      align-items: center;
      transition:
        border-color var(--transition),
        box-shadow var(--transition),
        background-color var(--transition);
    }

    .input-shell.focused {
      border-color: var(--primary);
      box-shadow: 0 0 0 1px var(--primary-soft);
      background: #ffffff;
    }

    .input-prefix {
      padding-left: 10px;
      padding-right: 4px;
      font-size: 13px;
      color: var(--muted);
    }

    .input-field {
      width: 100%;
      border: none;
      outline: none;
      background: transparent;
      padding: 9px 10px;
      font-size: 14px;
      color: var(--text);
    }

    .input-field::placeholder {
      color: #9ca3af;
    }

    .helper-row {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin: 6px 0 14px;
      font-size: 12px;
      color: var(--muted);
    }

    .link {
      color: var(--primary);
      text-decoration: none;
      font-size: 12px;
    }

    .link:hover {
      text-decoration: underline;
    }

    button[type="submit"] {
      width: 100%;
      padding: 10px 12px;
      border-radius: 8px;
      border: none;
      outline: none;
      background: var(--primary);
      color: #ffffff;
      font-weight: 500;
      font-size: 14px;
      letter-spacing: 0.02em;
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 6px;
      transition:
        background-color var(--transition),
        box-shadow var(--transition),
        transform var(--transition);
    }

    button[type="submit"]:hover {
      background: var(--primary-dark);
      box-shadow: 0 12px 26px rgba(37, 99, 235, 0.35);
      transform: translateY(-1px);
    }

    button[type="submit"]:active {
      transform: translateY(0);
      box-shadow: 0 7px 16px rgba(37, 99, 235, 0.35);
    }

    button[type="submit"].loading {
      cursor: default;
      opacity: 0.9;
    }

    .btn-icon {
      font-size: 14px;
      opacity: 0.8;
    }

    .spinner {
      width: 14px;
      height: 14px;
      border-radius: 999px;
      border: 2px solid rgba(255, 255, 255, 0.5);
      border-top-color: #ffffff;
      animation: spin 700ms linear infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }

    .status {
      margin-top: 8px;
      font-size: 12px;
      color: var(--muted);
      min-height: 16px;
    }

    .status.error {
      color: var(--danger);
    }

    .status.success {
      color: #16a34a;
    }

    .status-dot {
      display: inline-block;
      width: 6px;
      height: 6px;
      border-radius: 999px;
      background: currentColor;
      margin-right: 6px;
    }

    .footer-note {
      margin-top: 16px;
      font-size: 11px;
      color: var(--muted);
      text-align: center;
    }

    .brand {
      text-align: center;
      color: #000000;
      text-decoration: none;
      font-size: 40px;
      font-weight: bold;
      letter-spacing: 1px;
    }

    .brand-mark {
      width: 18px;
      height: 18px;
      border-radius: 5px;
      background: linear-gradient(135deg, #22c55e, #0ea5e9);
      display: inline-flex;
      align-items: center;
      justify-content: center;
      color: #ecfdf5;
      font-size: 11px;
    }

    @media (max-width: 480px) {
      .card {
        padding: 20px 18px 18px;
      }

      h2 {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <div class="brand">
      <span>StayScape</span>
    </div>

    <div class="card">
      <div class="card-header">
        <h2 style="text-align: center;">Admin login</h2>
        <p class="subtitle" style="text-align: center;">Sign in to manage rooms, reservations, and guests.</p>
      </div>

      <form method="POST" action="/api/admin/login" id="admin-login-form" novalidate>
        <div class="field-group">
          <label class="field-label" for="email">Email</label>
          <div class="input-shell" data-input-shell>
            <span class="input-prefix">@</span>
            <input
              id="email"
              type="email"
              name="email"
              class="input-field"
              placeholder="example@gmail.com"
              required
            />
          </div>
        </div>

        <div class="field-group">
          <label class="field-label" for="password">Password</label>
          <div class="input-shell" data-input-shell>
            <span class="input-prefix">••</span>
            <input
              id="password"
              type="password"
              name="password"
              class="input-field"
              placeholder="Your password"
              required
            />
          </div>
        </div>

        <div class="helper-row">
          <span>Use your admin account.</span>
          <a href="#" class="link">Forgot password?</a>
        </div>

        <button type="submit" id="login-button">
          <span>Login</span>
          <span class="btn-icon">→</span>
        </button>

        <p class="status" id="status-message">
          <span class="status-dot" id="status-dot" style="display:none;"></span>
          <span id="status-text"></span>
        </p>
      </form>

      <p class="footer-note">
        Access reserved for front-desk and management staff.
      </p>
    </div>
  </div>

  <script>
    (function () {
      var form = document.getElementById("admin-login-form");
      var loginButton = document.getElementById("login-button");
      var statusMessage = document.getElementById("status-message");
      var statusText = document.getElementById("status-text");
      var statusDot = document.getElementById("status-dot");
      var inputShells = document.querySelectorAll("[data-input-shell]");
      var emailInput = document.getElementById("email");
      var passwordInput = document.getElementById("password");

      function showStatus(message, type) {
        statusText.textContent = message;
        statusDot.style.display = message ? "inline-block" : "none";
        statusMessage.classList.remove("error", "success");
        if (type) {
          statusMessage.classList.add(type);
        }
      }

      function clearStatus() {
        showStatus("", "");
      }

      inputShells.forEach(function (shell) {
        var input = shell.querySelector(".input-field");
        if (!input) return;

        input.addEventListener("focus", function () {
          shell.classList.add("focused");
        });

        input.addEventListener("blur", function () {
          shell.classList.remove("focused");
        });

        input.addEventListener("input", clearStatus);
      });

      form.addEventListener("submit", function () {
        // Keeps original POST logic; only adds UX polish
        clearStatus();
        loginButton.classList.add("loading");
        loginButton.disabled = true;

        var previousContent = loginButton.innerHTML;
        loginButton.innerHTML = "";
        var spinner = document.createElement("span");
        spinner.className = "spinner";
        loginButton.appendChild(spinner);

        if (!emailInput.value || !passwordInput.value) {
          showStatus("Please enter both email and password.", "error");
        } else {
          showStatus("Signing you in…", "success");
        }

        setTimeout(function () {
          loginButton.classList.remove("loading");
          loginButton.disabled = false;
          loginButton.innerHTML = previousContent;
        }, 4000);
      });
    })();
  </script>
</body>
</html>
