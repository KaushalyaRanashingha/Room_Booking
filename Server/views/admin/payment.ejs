<!DOCTYPE html>
<html>
<head>
  <title>Payments</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/admin.css">
</head>
<body class="bg-light">
  <div class="d-flex min-vh-100">
    <%- include("sidebar") %>

    <div class="flex-grow-1 d-flex flex-column">
      <%- include("navbar") %>

      <main class="container-fluid py-3">
        <!-- Page Header -->
        <div class="d-flex flex-wrap justify-content-between align-items-end mb-3">
          <div>
            <h1 class="h3 mb-1">Payments</h1>
            <p class="text-muted mb-0">Track payment amounts and statuses for bookings.</p>
          </div>
          <span class="badge bg-light text-muted border">
            Total payments: <%= payments.length %>
          </span>
        </div>

        <!-- Payments Table -->
        <section class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h2 class="h5 mb-0">All Payments</h2>
              <small class="text-muted">Showing <%= payments.length %> record(s)</small>
            </div>

            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>User</th>
                    <th>Amount</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (payments.length === 0) { %>
                    <tr>
                      <td colspan="3" class="text-center text-muted py-4">
                        No payments found.
                      </td>
                    </tr>
                  <% } %>

                  <% payments.forEach(p => { %>
                    <tr>
                      <td><%= p.user?.name || 'â€”' %></td>
                      <td>LKR <%= p.amount %></td>
                      <td>
                        <% if (p.status === 'Paid') { %>
                          <span class="badge bg-success-subtle text-success">Paid</span>
                        <% } else if (p.status === 'Pending') { %>
                          <button class="btn btn-sm btn-success approve-btn" data-id="<%= p._id %>">
                            Approve
                          </button>
                          <span class="badge bg-warning-subtle text-warning"><%= p.status %></span>
                        <% } else if (p.status === 'Failed') { %>
                          <span class="badge bg-danger-subtle text-danger">Failed</span>
                        <% } else { %>
                          <span class="badge bg-secondary-subtle text-secondary"><%= p.status %></span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </section>
      </main>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Axios -->
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

  <script>
    document.querySelectorAll(".approve-btn").forEach(button => {
      button.addEventListener("click", async () => {
        const paymentId = button.dataset.id;

        if (!confirm("Are you sure you want to approve this payment?")) return;

        try {
          // Make POST request to approve payment
          const res = await axios.post(
            `/api/admin/payment/approve/${paymentId}`,
            {}, // POST body empty
            { withCredentials: true } // if using session auth
          );

          if (res.status === 200) {
            alert("Payment approved! Email sent to customer.");

            // Update button and badge
            button.disabled = true;
            button.innerText = "Approved";

            const badge = button.nextElementSibling;
            badge.className = "badge bg-success-subtle text-success";
            badge.innerText = "Paid";
          }
        } catch (err) {
          console.error(err);
          alert("Failed to approve payment.");
        }
      });
    });
  </script>
</body>
</html>
