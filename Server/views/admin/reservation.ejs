<!DOCTYPE html>
<html>
<head>
  <title>Reservations</title>
  <!-- Bootstrap CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <!-- Your small overrides -->
  <link rel="stylesheet" href="/admin.css">
</head>
<body class="bg-light">
  <div class="d-flex min-vh-100">
    <!-- Sidebar -->
    <%- include("sidebar") %>

    <div class="flex-grow-1 d-flex flex-column">
      <!-- Navbar -->
      <%- include("navbar") %>

      <main class="container-fluid py-3">
        <!-- Page header -->
        <div class="d-flex flex-wrap justify-content-between align-items-end mb-3">
          <div>
            <h1 class="h3 mb-1">Reservations</h1>
            <p class="text-muted mb-0">
              Review and manage all room reservations.
            </p>
          </div>
          <span class="badge bg-light text-muted border">
            Total reservations: <%= reservations.length %>
          </span>
        </div>

        <!-- Reservations table -->
        <section class="card shadow-sm">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <h2 class="h5 mb-0">All reservations</h2>
              <small class="text-muted">
                Showing <%= reservations.length %> record(s)
              </small>
            </div>

            <div class="table-responsive">
              <table class="table align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>User</th>
                    <th>Room</th>
                    <th>Check‑in</th>
                    <th>Check‑out</th>
                    <th>Status</th>
                    <th class="text-end">Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (reservations.length === 0) { %>
                    <tr>
                      <td colspan="6" class="text-center text-muted py-4">
                        No reservations found.
                      </td>
                    </tr>
                  <% } %>

                  <% reservations.forEach(r => { %>
                    <tr>
                      <td><%= r.user?.name || '—' %></td>
                      <td><%= r.room?.title || '—' %></td>
                      <td><%= r.checkIn %></td>
                      <td><%= r.checkOut %></td>
                      <td>
                        <% if (r.status === 'Approved') { %>
                          <span class="badge bg-success-subtle text-success">
                            <%= r.status %>
                          </span>
                        <% } else if (r.status === 'Pending') { %>
                          <span class="badge bg-warning-subtle text-warning">
                            <%= r.status %>
                          </span>
                        <% } else if (r.status === 'Rejected') { %>
                          <span class="badge bg-danger-subtle text-danger">
                            <%= r.status %>
                          </span>
                        <% } else { %>
                          <span class="badge bg-secondary-subtle text-secondary">
                            <%= r.status %>
                          </span>
                        <% } %>
                      </td>
                      <td class="text-end">
                        <a
                          href="/api/admin/reservation/approve/<%= r._id %>"
                          class="btn btn-outline-success btn-sm"
                        >
                          Approve
                        </a>
                        <a
                          href="/api/admin/reservation/reject/<%= r._id %>"
                          class="btn btn-outline-danger btn-sm ms-1"
                        >
                          Reject
                        </a>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </section>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>