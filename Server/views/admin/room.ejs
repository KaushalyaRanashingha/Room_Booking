<!DOCTYPE html>
<html>
<head>
  <title>Room Management</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/admin.css">
</head>
<body class="bg-light">
  <div class="d-flex min-vh-100">
    <%- include("sidebar") %>

    <div class="flex-grow-1 d-flex flex-column">
      <%- include("navbar") %>

      <main class="container-fluid py-3">
        <!-- Page header -->
        <div class="d-flex flex-wrap justify-content-between align-items-end mb-3">
          <div>
            <h1 class="h3 mb-1">Room management</h1>
            <p class="text-muted mb-0">
              Add, update, and review all hotel rooms.
            </p>
          </div>
          <span class="badge bg-light text-muted border">
            Total rooms: <%= rooms.length %>
          </span>
        </div>

        <!-- Add Room Form -->
        <section class="card mb-3">
          <div class="card-body">
            <h2 class="h5 mb-1">Add new room</h2>
            <p class="text-muted mb-3">
              Fill in the details below to create a new room.
            </p>

            <form
              action="/api/admin/room/add"
              method="POST"
              enctype="multipart/form-data"
              class="row g-3"
            >
              <div class="col-md-6">
                <label for="roomNumber" class="form-label">Room number</label>
                <input
                  id="roomNumber"
                  type="text"
                  name="roomNumber"
                  class="form-control"
                  placeholder="e.g. 305"
                  required
                />
              </div>

              <div class="col-md-6">
                <label for="type" class="form-label">Type</label>
                <input
                  id="type"
                  type="text"
                  name="type"
                  class="form-control"
                  placeholder="Deluxe double"
                  required
                />
              </div>

              <div class="col-md-6">
                <label for="price" class="form-label">Price (per night)</label>
                <div class="input-group">
                  <span class="input-group-text">LKR</span>
                  <input
                    id="price"
                    type="number"
                    name="price"
                    class="form-control"
                    placeholder="Price"
                    required
                  />
                </div>
              </div>

              <div class="col-md-6">
                <label for="image" class="form-label">Room image</label>
                <input
                  id="image"
                  type="file"
                  name="image"
                  accept="image/*"
                  class="form-control"
                  required
                />
                <div class="form-text">JPG or PNG, up to 2MB.</div>
              </div>

              <div class="col-12 d-flex justify-content-end">
                <button type="submit" class="btn btn-primary">
                  Save room
                </button>
              </div>
            </form>
          </div>
        </section>

        <!-- Rooms Table -->
        <section class="card">
          <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
              <div>
                <h2 class="h5 mb-1">List of Rooms</h2>
                <p class="text-muted mb-0">
                  Overview of all rooms and their base rates.
                </p>
              </div>
              <small class="text-muted">
                Showing <%= rooms.length %> room(s)
              </small>
            </div>

            <div class="table-responsive">
              <table class="table align-middle">
                <thead class="table-light">
                  <tr>
                    <th>Room</th>
                    <th>Type</th>
                    <th>Price / night</th>
                    <th>Image</th>
                    <th>Availability</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (rooms.length === 0) { %>
                    <tr>
                      <td colspan="5" class="text-center text-muted py-4">
                        No rooms added yet. Use the form above to create your first room.
                      </td>
                    </tr>
                  <% } %>

                  <% rooms.forEach(room => { %>
                    <tr>
                      <td>
                        <div class="d-flex flex-column">
                          <span class="fw-semibold">#<%= room.roomNumber %></span>
                          <small class="text-muted"><%= room._id %></small>
                        </div>
                      </td>
                      <td>
                        <span class="badge bg-light text-dark border">
                          <%= room.type %>
                        </span>
                      </td>
                      <td>LKR <%= room.price %></td>
                      <td>
                        <% if (room.image) { %>
                          <img
                            src="/uploads/<%= room.image %>"
                            alt="Room <%= room.roomNumber %>"
                            class="img-thumbnail"
                            style="width: 80px; height: 54px; object-fit: cover;"
                          >
                        <% } else { %>
                          <span class="text-muted">No image</span>
                        <% } %>
                      </td>
                      <td><%= room.status %></td>
                      <td class="text-end">
                        <a href="/api/admin/room/edit/<%= room._id %>" class="btn btn-outline-secondary btn-sm">
                          Edit
                        </a>

                        <form action="/api/admin/room/delete/<%= room._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this room?');">
                            <button type="submit" class="btn btn-outline-danger btn-sm ms-1">
                                Delete
                            </button>
                        </form>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </section>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>