<!DOCTYPE html>
<html>
<head>
  <title>Edit User Details</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
  <link rel="stylesheet" href="/admin.css">
</head>
<body class="bg-light">
  <div class="d-flex min-vh-100">
    <%- include("sidebar") %>

    <div class="flex-grow-1 d-flex flex-column">
      <%- include("navbar") %>

      <main class="container-fluid py-3">
        <!-- Page header -->
        <div class="d-flex flex-wrap justify-content-between align-items-end mb-3">
          <div>
            <h1 class="h3 mb-1">Edit user</h1>
            <p class="text-muted mb-0">
              Update details for <strong><%= user.name %></strong>.
            </p>
          </div>
        </div>

        <!-- Edit User Form -->
        <section class="card shadow-sm">
          <div class="card-body">
            <h2 class="h5 mb-1">User details</h2>
            <p class="text-muted mb-3">
              Change only the fields you need and save.
            </p>

            <form
              action="/api/admin/user/update/<%= user._id %>"
              method="POST"
              class="row g-3"
            >
              <div class="col-md-6">
                <label for="name" class="form-label">Name</label>
                <input
                  id="name"
                  type="text"
                  name="name"
                  class="form-control"
                  value="<%= user.name %>"
                  required
                />
              </div>

              <div class="col-md-6">
                <label for="email" class="form-label">Email</label>
                <input
                  id="email"
                  type="email"
                  name="email"
                  class="form-control"
                  value="<%= user.email %>"
                  required
                />
              </div>

              <div class="col-md-6">
                <label for="role" class="form-label">Role</label>
                <select
                  id="role"
                  name="role"
                  class="form-select"
                  required
                >
                  <option value="user" <%= user.role === 'user' ? 'selected' : '' %>>User</option>
                  <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                  <!-- add more roles if needed -->
                </select>
              </div>

              <div class="col-12 d-flex justify-content-between">
                <a href="/api/admin/user" class="btn btn-outline-secondary">
                  Cancel
                </a>
                <button type="submit" class="btn btn-primary">
                  Save changes
                </button>
              </div>
            </form>
          </div>
        </section>
      </main>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
